{
  "compilerOptions": {
    "inlineSourceMap": false,
    "noImplicitAny": true,
    "lib": ["ESNext", "ES6", "ES7", "DOM"],
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "alwaysStrict": true,
    "declaration": true,
    "rootDir": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/__tests__/**/*"]
}
